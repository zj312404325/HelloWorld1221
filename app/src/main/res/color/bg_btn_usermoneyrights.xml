<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false">
	    <shape >
		    <solid android:color="#0083c8" />
			<corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp"  
        android:topRightRadius="5dp" android:bottomRightRadius="5dp" />
			<padding
	        android:left="2dp"
	        android:top="2dp"
	        android:right="2dp"
	        android:bottom="2dp"/>
			<solid android:color="#0083c8" />
			<stroke android:width="1dp" android:color="#0083c8" />
		</shape>
	</item>
</selector>
