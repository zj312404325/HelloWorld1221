<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
         android:id="@+id/ll_company" android:orientation="horizontal" >
	        <RelativeLayout style="@style/fill" android:layout_weight="1" android:orientation="vertical"
	           >
	            <TextView style="@style/wrap_content" android:text="啥的发简历撒旦解放路撒旦法记录撒旦法" 
	                android:layout_marginTop="10dp" android:id="@+id/txt_comp" />
	            <ImageView android:layout_width="20dp" android:layout_height="22dp" android:background="@drawable/xz1"
	                android:layout_alignParentBottom="true" android:layout_marginBottom="15dp" android:id="@+id/img_roleName"/>
	            <TextView style="@style/wrap_content" android:text="基础会员" android:id="@+id/txt_roleName"
	                android:layout_alignParentBottom="true" android:layout_marginBottom="17dp" android:layout_marginLeft="25dp"/>
	            <ImageView android:layout_width="22dp" android:layout_height="22dp" android:id="@+id/img_qq" 
	                android:background="@drawable/qq" android:layout_alignParentBottom="true"
	                android:layout_alignParentRight="true" android:layout_marginBottom="12dp" 
	                android:layout_marginRight="32dp" android:visibility="gone" />
	            <ImageView android:layout_width="22dp" android:layout_height="22dp" android:id="@+id/img_mobile" 
	                android:background="@drawable/mobile" android:layout_alignParentBottom="true"
	                android:layout_alignParentRight="true" android:layout_marginBottom="12dp"
	                android:layout_marginRight="5dp" android:visibility="gone" />
	        </RelativeLayout>
	        <LinearLayout android:layout_width="70dp" android:layout_height="match_parent" android:orientation="vertical">
		        <TextView style="@style/wrap_content" android:text="经营模式：" android:layout_marginTop="10dp" 
		            android:textSize="12dp" android:textColor="@color/gray"/>
		        <TextView style="@style/wrap_content" android:text="贸易批发：" android:layout_marginTop="5dp"
		            android:textSize="12dp" android:id="@+id/txt_comptype"/>
		        <TextView style="@style/wrap_content" android:text="所属行业：" android:layout_marginTop="5dp"
		            android:textSize="12dp"  android:textColor="@color/gray"/>
		        <TextView style="@style/wrap_content" android:text="钢铁资源：" android:layout_marginTop="5dp"
		            android:textSize="12dp" android:id="@+id/txt_industryclass" />
		    </LinearLayout>
		    <RelativeLayout android:layout_width="100dp" android:layout_height="match_parent">
		        <ImageView android:id="@+id/img_top1" android:layout_width="37dp" android:layout_height="27dp" android:background="@drawable/top1" android:layout_alignParentRight="true"  />
		        <ImageView android:id="@+id/img_top2"  android:layout_width="37dp" android:layout_height="27dp" android:background="@drawable/top2" android:layout_alignParentRight="true"/>
		        <ImageView android:id="@+id/img_top3"  android:layout_width="37dp" android:layout_height="27dp" android:background="@drawable/top3" android:layout_alignParentRight="true"/>
			    <LinearLayout android:layout_width="100dp" android:layout_height="wrap_content" android:layout_centerVertical="true">
			    	<TextView  style="@style/wrap_content" android:text="共" android:layout_gravity="center_vertical"/>
			    	<TextView  style="@style/wrap_content" android:text="" android:layout_gravity="center_vertical" 
			    	    android:textSize="18dp" android:textColor="#0083c8" android:id="@+id/txt_proNums"/>
			    	<TextView  style="@style/wrap_content" android:text="个商品" android:layout_gravity="center_vertical"/>
		        </LinearLayout>
	        </RelativeLayout>
	    </LinearLayout>
<View style="@style/line" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
</LinearLayout>
