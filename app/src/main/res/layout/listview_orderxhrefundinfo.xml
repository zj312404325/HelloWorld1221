<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout  android:layout_width="match_parent"  android:layout_height="86dp" android:layout_marginLeft="16dp"   android:layout_marginRight="16dp" 
			    android:orientation="horizontal" >
			    <CheckBox style="@style/wrap_content" android:layout_gravity="center_vertical" android:id="@+id/ck_checkinfo"/>
		        <RelativeLayout android:layout_width="76dp" android:layout_height="86dp" >
		            <ImageView android:layout_width="66dp" android:layout_height="66dp" android:id="@+id/img_proImgPath"
		                android:background="@drawable/test" android:layout_centerVertical="true"/>
		        </RelativeLayout>
		        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" 
		            android:orientation="vertical">
		            	<TextView style="@style/wrap_content" android:text="" 
		            	    android:layout_marginTop="10dp" android:maxLines="2" android:textSize="11dp"
		            	    android:lineSpacingExtra="4dp"  android:id="@+id/tv_proName"/>
		            	<TextView style="@style/wrap_content" android:text="" android:id="@+id/tv_info"
		            	   android:textSize="11dp"
		            	    android:lineSpacingExtra="4dp"  android:textColor="@color/gray"  />
		        </LinearLayout>
		        <LinearLayout android:layout_width="80dp" android:layout_height="match_parent" android:orientation="vertical" >
		           <TextView style="@style/wrap_content" android:text="" android:layout_gravity="right"
		                android:textColor="#b53144" android:textSize="12dp" android:layout_marginTop="10dp"
		                android:id="@+id/tv_salePrice"/>
		           <TextView style="@style/wrap_content" android:text="X12" android:layout_gravity="right"
		                android:textColor="@color/gray" android:textSize="12dp" android:layout_marginTop="10dp"
		                android:id="@+id/tv_quantity"/>
		        </LinearLayout>
		        
		        		        
	</LinearLayout>
  	<LinearLayout style="@style/line" android:layout_marginLeft="16dp"   android:layout_marginRight="16dp"  />
</LinearLayout>
